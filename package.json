{
  "name": "import-validator-wasm",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "pnpm run build:wasm && pnpm -r build",
    "build:wasm": "pnpm --filter @import-validator/core run build:wasm",
    "dev:ex": "pnpm --filter vite-ts-demo run dev",
